<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="540.0" style="-fx-background-color: #ddffcc;" xmlns="http://javafx.com/javafx/8.0.261" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.WordAddController">
   <children>
      <AnchorPane layoutX="60.0" layoutY="50.0" prefHeight="300.0" prefWidth="470.0" style="-fx-background-color: #ddeeff; -fx-border-color: #bbccdd;">
         <children>
            <TextArea fx:id="wordExplainUI" layoutX="10.0" layoutY="65.0" prefHeight="230.0" prefWidth="450.0">
               <font>
                  <Font size="13.0" />
               </font>
            </TextArea>
            <TextField fx:id="wordTargetUI" layoutX="10.0" layoutY="20.0" prefHeight="25.0" prefWidth="250.0">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <Label layoutX="10.0" prefHeight="20.0" prefWidth="75.0" text="Word Target" textFill="#00aa00">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="45.0" prefHeight="20.0" prefWidth="85.0" text="Word Explain" textFill="#00aa00">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Button blendMode="MULTIPLY" defaultButton="true" layoutY="70.0" mnemonicParsing="false" onAction="#addButtonClicked" prefHeight="25.0" prefWidth="60.0" text="Add" />
      <Button blendMode="MULTIPLY" layoutY="110.0" mnemonicParsing="false" onAction="#discardButtonClicked" prefHeight="25.0" prefWidth="60.0" text="Discard" />
   </children>
</AnchorPane>
